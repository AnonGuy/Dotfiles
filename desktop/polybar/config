[bar/laptop]
font-0 = "Tamzen:pixelsize=12;2.25"
monitor = "eDP1"
fixed-center = true
width = 100%
height = 22
background = #1D2021
foreground = #A89984
radius = 0.0
padding-left = 1
padding-right = 2
module-margin = 0
modules-left = bspwm
modules-center = battery date music
modules-right = network
wm-restack = bspwm

[bar/monitor]
font-0 = "Tamzen:pixelsize=12;2.25"
monitor = "HDMI2"
fixed-center = true
width = 100%
height = 22
background = #1D2021
foreground = #A89984
radius = 0.0
padding-left = 1
padding-right = 2
module-margin = 0
modules-left = bspwm
modules-center = battery date music
modules-right = network
wm-restack = bspwm


[module/bspwm]
strip-wsnumbers = true
type = internal/bspwm
format = <label-state> <label-mode>
inline-mode = false
enable-click = false
fuzzy-match = true
label-focused-foreground = #BA9869
label-focused-background = #292929
label-urgent-foreground = #BA9869
label-urgent-background = #292929
label-empty = %icon%

[module/date]
type = internal/date
interval = 1.0
date = "       %A, %d %B %I:%M:%S %p"

[module/music]
type = custom/script
interval = 0.1
exec = ~/.config/polybar/music.sh

[module/corona]
type = custom/script
interval = 60
exec = ~/.config/polybar/corona.sh

[module/uniget]
type = custom/script
interval = 0.5
exec = ~/.config/polybar/uniget.sh

[module/network]
type = internal/network
interface = wlp4s0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = "%local_ip%"
label-disconnected = ÔÅû

[module/battery]
type = internal/battery
full-at = 100
label-charging = "%percentage%+"
label-discharging = "%percentage%-"
label-full = "~%percentage%"
battery = BAT0
adapter = AC
poll-interval = 1
